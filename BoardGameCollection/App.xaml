<Application x:Class="BoardGameCollection.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BoardGameCollection"
             xmlns:converters="clr-namespace:BoardGameCollection.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Определение конвертеров -->
            <converters:EnumToCollectionConverter x:Key="EnumToCollectionConverter"/>
            <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <!-- Базовые стили -->
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="MinWidth" Value="80"/>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="2,0"/>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="Padding" Value="3"/>
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="Padding" Value="3"/>
            </Style>

            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="5,2"/>
            </Style>

            <Style TargetType="Border">
                <Setter Property="Padding" Value="5"/>
            </Style>

            <!-- Стиль для ListView -->
            <Style TargetType="ListView">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#DDDDDD"/>
            </Style>

            <!-- Стиль для DatePicker -->
            <Style TargetType="DatePicker">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Height" Value="25"/>
            </Style>

            <!-- Стиль для Slider -->
            <Style TargetType="Slider">
                <Setter Property="Margin" Value="5,10"/>
                <Setter Property="Height" Value="25"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>